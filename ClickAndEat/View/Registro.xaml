                     Foreground="#FFE0EDD3" VerticalContentAlignment="Center" Margin="41,0,0,0"
                     BorderBrush="{x:Null}" SelectionBrush="{x:Null}">
                    </TextBox>-->
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             x:Name="email" HorizontalAlignment="Left" TextWrapping="Wrap"
                             VerticalAlignment="Center" Width="173" TextChanged="email_TextChanged"
                             Height="28" Background="#FF66B878" FontFamily="Arial" FontWeight="Bold"
                             Foreground="#FFE0EDD3" VerticalContentAlignment="Center" Margin="41, 0,0,0"
                             BorderBrush="{x:Null}" SelectionBrush="{x:Null}"/>
                    

                </Grid>
            </Border>
            <Border CornerRadius="12"
                    Background="#FF66B878"
                    Margin="0,25,0,0"
                    Height="38"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="220" Grid.Row="1">   
                <!--<Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="icon_password" HorizontalAlignment="Left" Height="21"
                   Margin="10,0,0,0" VerticalAlignment="Center" Width="21" 
                   Source="/Image/key-icon.png" RenderTransformOrigin="0.452,0.126"/>
                    <TextBox x:Name="password" HorizontalAlignment="Left"
                     TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" 
                     Width="173" TextChanged="password_TextChanged" Height="28" 
                     Background="#FF66B878" FontFamily="Arial" FontWeight="Bold" 
                     Foreground="#FFE0EDD3" VerticalContentAlignment="Center" Margin="41,0,0,0"
                     SelectionBrush="{x:Null}" BorderBrush="{x:Null}" Grid.ColumnSpan="2">
                    </TextBox>
                </Grid>-->
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <!--<customcontrols:BindablePasswordBox
        Password="{Binding Password,
        Mode=TwoWay,
        UpdateSourceTrigger=PropertyChanged}"
        Height="28"
        Margin="10, 5, 0, 10"
        x:Name="passwordControl">
                        
                    </customcontrols:BindablePasswordBox>-->
                    <customcontrols:BindablePasswordBox Password="{Binding Password, Mode=TwoWay}" 
                                                        Height="28" 
                                                        Margin="10, 5, 0, 10"
                                                        x:Name="passwordControl" />
                    <!--<Image x:Name="icon_password" HorizontalAlignment="Left" Height="21" 
       Margin="10,0,0,0" VerticalAlignment="Center" Width="21" 
       Source="/Image/icon_password.png" RenderTransformOrigin="0.452,0.126"/>
    <TextBox x:Name="password" HorizontalAlignment="Left" 
         TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" 
         Width="173" TextChanged="textBox_TextChanged_1" Height="28" 
         Background="#FF66B878" FontFamily="Arial" FontWeight="Bold" 
         Foreground="#FFE0EDD3" 
         VerticalContentAlignment="Center" Margin="41,0,0,0" SelectionBrush="{x:Null}" BorderBrush="{x:Null}"></TextBox>-->
                </Grid>
            </Border>
